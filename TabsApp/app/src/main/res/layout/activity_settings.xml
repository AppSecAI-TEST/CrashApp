<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tabsapp.Settings">

    <Button
        android:id="@+id/strength_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="@string/strength_shake"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:background="#00FF0000"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#225A53"/>

    <Button
        android:id="@+id/coordinates_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="@string/coordinate_transfer_method"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:background="#00FF0000"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#225A53"/>


</LinearLayout>
